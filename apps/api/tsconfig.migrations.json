{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2020",
		"sourceMap": true,
		"outDir": "migrations-js",
		"baseUrl": ".",
		"incremental": true,
		"sourceRoot": "/"
	},
	"include": ["migrations"],
	"exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
