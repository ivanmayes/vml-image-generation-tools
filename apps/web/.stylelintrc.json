{
	"extends": ["stylelint-config-standard-scss"],
	"plugins": ["../../tools/lint-plugins/stylelint-primeng"],
	"rules": {
		"primeng/no-hardcoded-colors": [
			true,
			{
				"allowTransparent": true,
				"allowCurrentColor": true,
				"severity": "warning"
			}
		],
		"primeng/use-design-tokens": true,
		"primeng/no-component-overrides": [
			true,
			{
				"severity": "warning"
			}
		],
		"primeng/no-ng-deep": [
			true,
			{
				"severity": "warning"
			}
		],
		"primeng/prefer-semantic-tokens": true,
		"primeng/consistent-spacing": true,
		"scss/at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"tailwind",
					"apply",
					"layer",
					"config",
					"plugin"
				]
			}
		],
		"no-invalid-position-at-import-rule": [
			true,
			{
				"ignoreAtRules": ["use", "forward", "plugin"]
			}
		],
		"selector-pseudo-element-no-unknown": [
			true,
			{
				"ignorePseudoElements": ["ng-deep"]
			}
		],
		"no-descending-specificity": null,
		"selector-class-pattern": null
	},
	"ignoreFiles": ["**/node_modules/**", "**/dist/**", "**/coverage/**"],
	"overrides": [
		{
			"files": ["**/theme/**/*.scss", "**/design-system/**/*.scss"],
			"rules": {
				"primeng/no-hardcoded-colors": null,
				"primeng/use-design-tokens": null,
				"primeng/prefer-semantic-tokens": null,
				"number-max-precision": null
			}
		}
	]
}
