{
  "plugins": ["./tools/lint-plugins/stylelint-primeng"],
  "rules": {
    "primeng/no-hardcoded-colors": [
      true,
      {
        "allowTransparent": true,
        "allowCurrentColor": true,
        "allowedPatterns": []
      }
    ],
    "primeng/use-design-tokens": true,
    "primeng/no-component-overrides": [
      true,
      {
        "severity": "warning",
        "allowedOverrides": []
      }
    ],
    "primeng/no-ng-deep": [
      true,
      {
        "severity": "warning"
      }
    ],
    "primeng/prefer-semantic-tokens": true,
    "primeng/consistent-spacing": [
      true,
      {
        "allowedValues": [
          "0",
          "0.125rem",
          "0.25rem",
          "0.375rem",
          "0.5rem",
          "0.625rem",
          "0.75rem",
          "0.875rem",
          "1rem",
          "1.25rem",
          "1.5rem",
          "1.75rem",
          "2rem",
          "2.5rem",
          "3rem",
          "4rem",
          "auto",
          "inherit",
          "initial",
          "unset"
        ]
      }
    ]
  }
}
